window.fbAsyncInit = ->
  FB.init(appId: '<%= Rails.application.config.facebook[:app_id] %>', cookie: true)

  $('a.facebook.signup').on click: (e) ->
    e.preventDefault()

    FB.login (response) ->
      window.location = '/auth/facebook/callback' if response.authResponse
    ,
    scope: 'email,user_birthday'