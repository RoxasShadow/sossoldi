<div class="account">
  <h2>
    <%= account.name %>
    <br>
    <%= number_to_currency(account.money, currency_info_for(@user)) %>
    <% if account.left_money != account.money %>
      (<%= "#{number_to_currency(account.left_money, currency_info_for(@user))} #{account.left_money > 0 ? 'left' : 'of debt'}" %>)
    <% end %>
  </h2>

  <div class="items">
    <% account.items.bought_in(@month).each do |item| %>
      <%= render 'item', item: item, account: account %>
    <% end %>
  </div>

  <%= render 'new_item',     account: account %>
  <%= render 'edit_account', account: account %>
</div>
